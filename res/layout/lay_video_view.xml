<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.23"
        android:background="@drawable/top_bg_cut" >

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Video"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="4.7"
        android:weightSum="10" >

        <RelativeLayout
            android:id="@+id/flVideoView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/video_border"
            android:padding="7dp" >

            <VideoView
                android:id="@+id/vvScreen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/ivScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:scaleType="fitXY" >
            </ImageView>

            <Button
                android:id="@+id/btnPlayVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/play"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:background="@drawable/seeckbar_bg"
            android:orientation="vertical"
            android:weightSum="6" >

            <RelativeLayout
                android:layout_width="318dp"
                android:layout_height="0dp"
                android:layout_weight="3.95" >

                <SeekBar
                    android:id="@+id/sbVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxHeight="1dp"
                    android:minHeight="1dp"
                    android:paddingLeft="@dimen/default_margin"
                    android:paddingRight="@dimen/default_margin"
                    android:progressDrawable="@drawable/thumblerseek1"
                    android:thumb="@drawable/clip"
                    android:thumbOffset="0dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.97" >

                <TextView
                    android:id="@+id/tvStartVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:text="--" />

                <TextView
                    android:id="@+id/tvEndVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:text="--" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:gravity="center_horizontal"
        android:weightSum="10" >

        <Button
            android:id="@+id/btnrotate_90"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="90"
             android:background="@drawable/cut"
            android:textColor="@color/bt_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnrotate_180"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="180"
             android:background="@drawable/cut"
            android:textColor="@color/bt_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnrotate_270"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="270"
             android:background="@drawable/cut"
            android:textColor="@color/bt_text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btncustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom"
             android:background="@drawable/cut"
            android:textColor="@color/bt_text"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        
        android:layout_weight="1.1"
        android:gravity="center"
        android:weightSum="10" >

        <Button
            android:id="@+id/btnDone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.2"
            android:background="@drawable/cut"
            android:text="Done"
            android:textColor="@color/bt_text"
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>